{% extends 'layout.html.twig' %}

{% block body %}

<table class="table table-striped">
   <thead>
      <tr>
         <th>#</th>
         <th>Todo </th>
         <th>Due Date</th>
         <th></th>
      </tr>
   </thead>
   <tbody>
   {%for Todo in Todos %}
      <tr>
         <th scope="row">{{Todo.id}}</th>
         <td>{{Todo.name}}</td>
         <td>{{Todo.dueDate| date('F j, Y, g:i a') }}</td>
         <td><a href="/test/details/{{Todo.id}}" class="btn btn-success"> View </a>
         	<a href="/test/edit/{{Todo.id}}" class="btn btn-default"> Edit </a>
         	<a href="/test/delete/{{Todo.id}}" class="btn btn-danger"> delete </a>
         </td>
      </tr>
      {% endfor %}
   </tbody>
</table>


{% endblock %}