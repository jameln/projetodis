{%  block  specificJS %}
    <script>
        $(document).ready(function(){
            var menu = $('#navigation > .navbar');
            var logo = $('#navigation > .navbar > .page-header-inner  > .page-logo > a > img');
            //var origOffsetY = $('#bottom').offset().top;
            function scroll() {
                var origOffsetY = $('#bottom');
                if(origOffsetY.length > 0){
                        origOffsetY = $('#bottom').offset().top;
                        if ($(window).scrollTop() > origOffsetY) {
                                menu.addClass('navbar-white');
                                menu.removeClass('navbar-dark');
                                logo.attr("src", '{{asset("assets/layouts/layout4/img/logo-light.png")}}');
                        } else {
                            menu.removeClass('navbar-white');
                            menu.addClass('navbar-dark');
                            logo.attr("src", '{{asset("assets/layouts/layout4/img/logo-light-white.png")}}');
                        }
                }
            }
            menu.removeClass('navbar-white');
            menu.addClass('navbar-dark');
            logo.attr("src", '{{asset("assets/layouts/layout4/img/logo-light-white.png")}}');
        document.onscroll = scroll;
    });
      
    </script>
    
